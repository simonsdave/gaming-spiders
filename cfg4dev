if [ -f "$PWD/requirements.txt" ]; then
    export DEV_ENV_DOCKER_IMAGE=simonsdave/gaming-spiders-xeniel-dev-env:build

    if [ -d "$PWD/env" ]; then
        source "$PWD/env/bin/activate"
    else
        virtualenv env
        source "$PWD/env/bin/activate"

        pip install --upgrade pip

        curl -s -L https://raw.githubusercontent.com/simonsdave/cloudfeaster/master/bin/install-dev-env-scripts.sh | bash -s --

        "$PWD/dev_env/build-docker-image.sh" "$DEV_ENV_DOCKER_IMAGE"
    fi
    export PATH="$PWD/bin":$PATH
else
    echo "Must source this script from project's root directory" >&2
    return 1
fi
